# ===== MILVUS PRODUZIONE ALLINEATO =====
# Configurazione base (già ok)
MILVUS_HOST=127.0.0.1
MILVUS_PORT=19530

# Configurazione aggiuntiva necessaria per Laravel
MILVUS_COLLECTION=crowdmai_document_embeddings
MILVUS_TLS=false
MILVUS_PYTHON_PATH=python3
MILVUS_PARTITIONS_ENABLED=true

# Configurazione indice per performance
MILVUS_INDEX_TYPE=HNSW
MILVUS_HNSW_M=16
MILVUS_HNSW_EF_CONSTRUCTION=200
MILVUS_HNSW_EF=96

# RAG Vector Settings
RAG_VECTOR_DRIVER=milvus
RAG_VECTOR_METRIC=cosine
RAG_VECTOR_TOP_K=100
RAG_VECTOR_MMR_LAMBDA=0.3

# OpenAI Embeddings (se non già presente)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIM=1536

# RAG ottimizzato per produzione
RAG_CHUNK_MAX_CHARS=2200
RAG_CHUNK_OVERLAP_CHARS=250
RAG_BM25_TOP_K=200
RAG_RERANK_DRIVER=embedding
RAG_MIN_CONFIDENCE=0.05
