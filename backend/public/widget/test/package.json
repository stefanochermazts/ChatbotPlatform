{
  "name": "chatbot-widget-tests",
  "version": "1.0.0",
  "description": "Test suite for ChatBot Widget Platform",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:accessibility && npm run test:e2e",
    "lint": "eslint src/ test/ --ext .js",
    "lint:fix": "eslint src/ test/ --ext .js --fix"
  },
  "devDependencies": {
    "@jest/environment-jsdom": "^29.7.0",
    "axe-core": "^4.8.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-axe": "^8.0.0",
    "puppeteer": "^21.5.2",
    "puppeteer-jest-environment": "^1.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "../js/**/*.js",
      "!../js/**/*.min.js",
      "!**/node_modules/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/**/*.test.js",
      "<rootDir>/**/*.spec.js"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/../js/$1"
    }
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2022": true,
      "jest": true,
      "node": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  }
}
